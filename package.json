{
    "name": "torchbug-bot",
    "version": "1.0.0",
    "description": "Tweeting every day for a tochbug pet âœ¨",
    "repository": "git@github.com:keziahrg/torchbug-bot.git",
    "author": "keziahrg <rg.keziah@gmail.com>",
    "license": "ISC",
    "main": "src/index.ts",
    "scripts": {
        "dev": "ts-node src/index.ts",
        "build": "tsc && ts-node src/index.ts",
        "lint": "eslint ./src --fix --max-warnings=0",
        "format": "prettier ./src --write --ignore-unknown",
        "configure-husky": "npx husky install && npx husky add .husky/pre-commit \"npx --no-install lint-staged\""
    },
    "dependencies": {
        "@netlify/functions": "^1.3.0",
        "dotenv": "^10.0.0",
        "moment": "^2.29.1",
        "node-fetch": "^3.3.0",
        "twitter-api-v2": "^1.9.1"
    },
    "devDependencies": {
        "@types/node": "^17.0.8",
        "@typescript-eslint/eslint-plugin": "^5.47.1",
        "@typescript-eslint/parser": "^5.47.1",
        "eslint": "^8.30.0",
        "eslint-config-prettier": "^8.5.0",
        "husky": "^8.0.2",
        "lint-staged": "^13.1.0",
        "prettier": "^2.8.1",
        "ts-node": "^10.4.0",
        "tsc-node": "^0.0.3",
        "typescript": "^4.5.4"
    },
    "lint-staged": {
        "**/*.{js,jsx,ts,tsx}": [
            "eslint . --fix --max-warnings=0",
            "prettier . --write --ignore-unknown"
        ]
    }
}
